{% block content %}
	<section class="section section-hero" data-anchor="true">
		<div class="hero-inner container">
			<h1 class="visually-hidden">Welcome to NeverDesign.net&mdash;The portfolio website of Jon De Araujo</h1>

			<div class="title">
				<div>
					<b>UX/UI</b>
					<span class="fw-bold text-red">+</span>
				</div>
				<div>
					<span class="text-label text-first">Designer<b class="text-red">.</b></span>
					<span class="text-label text-last">Developer<b class="text-red">.</b></span>
				</div>
			</div>
		</div>
	</section>

	<section id="about" class="section section-about" data-anchor="true">
		<div class="section-inner container width-narrow">
			<div class="row">
				<div class="col-12 col-md-4 d-flex align-items-center">
					<div class="container-image">
						<img class="img-profile" src="/images/profile.png" alt="Jon De Araujo - Profile Picture" width="200" height="200" />
					</div>
				</div>
				<div class="col-12 col-md-8">
					<div class="header">
						<h2 class="title">About</h2>
					</div>

					<div class="content">
						<p class="h3 fw-light">I create imaginative, thoughtful and accessible digital experiences.</p>
						<p>Hi, my name is Jon. I’m a UX/UI Designer and developer. I’m a passionate designer and a creative at heart wise in the ways of UX/UI and skilled in design and development principals. Since finishing a Bachelors Degree in Creative Industries (Communication Design) in 2007 I have worked in the industry at a wide variety of organizations internationally and freelanced in-between. </p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section id="folio" class="section section-folio" data-anchor="true">
		<div class="section-inner">
			<div class="text-center">
				<div class="header">
					<h2 class="title">Folio</h2>
				</div>
			</div>

			<div id="carousel-projects" class="carousel slide" data-bs-ride="carousel">
				<div class="carousel-indicators">
					{% for item in projects %}
					<button type="button" data-bs-target="#carousel-projects" data-bs-slide-to="{{ loop.index0 }}" {% if loop.first %}class="active" aria-current="true"{% endif%} aria-label="{{ item.title }}"></button>
					{% endfor %}
				</div>
				<div class="carousel-inner">
					{% for item in projects %}
					<div class="carousel-item item-project {{ loop.first ? 'active' : '' }}" >
						<div class="item-inner row justify-content-center">
							<div class="item-media col-12 col-md-6 col-lg">
								<img src="{{ item.image }}" alt="{{ item.title }}" width="400" height="400" />
							</div>
							<div class="item-content col-12 col-sm-10 col-md-6 col-lg">
								<h3 class="h2">{{ item.title }}</h3>

								<p>{{ item.description }}</p>

								<p><a href="{{ item.url }}" class="btn btn-outline-primary-white" target="_blank" rel="noreferrer">Visit Site</a></p>

								<h4 class="h6 text-uppercase fw-bolder">Contributions</h4>
								<p>
									{% for task in item.tasks %}
										<span class="badge bg-grey-lightest text-grey-darkest">{{ task }}</span>
									{% endfor %}
								</p>

							</div>
						</div>
					</div>
					{% endfor %}
				</div>
				<button class="carousel-control-prev" type="button" data-bs-target="#carousel-projects"  data-bs-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Previous</span>
				</button>
				<button class="carousel-control-next" type="button" data-bs-target="#carousel-projects"  data-bs-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Next</span>
				</button>
			</div>

			<div class="text-center pt-4">
				<div class="header">
					<h4 class="title">Brands I've worked with</h4>
				</div>
			</div>

			<div class="collection">
				{% for item in clients %}
				<div class="item item-logo">
					<div class="item-inner">
						<div class="item-media">
							<img src="{{ item.image }}" alt="{{ item.label }}" width="200" height="90" />
						</div>
					</div>
				</div>
				{% endfor %}
			</div>
		</div>
	</section>

